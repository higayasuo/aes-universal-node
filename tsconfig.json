{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
